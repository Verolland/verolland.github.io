* {
	box-sizing: border-box;
}

html {
	height: 100%;
	width: 100%;
	overflow: hidden;
}

body {
	height: 100%;
	width: 100%;
	overflow: hidden;
	margin: 0;
	padding: 10px;
}
.header {
	grid-area: menu;
	display: grid;
	line-height: 0.1;
	font-family: Helvetica;
	background-color: #008CBA;
	text-align: center;
}

.titre h1{
	font-size: 7vmin;
	color : white;
}
.titre p{
	font-size: 4vmin;
	color : #fedd6a;
}

.menu {
	grid-area: menu;
	display: grid;
	height: 10px;
}

.main-contener {
	grid-area: main;
	display: grid;
	height: 75%;
	width: 100%;
	grid-template-columns: repeat(3, minmax(2vw, 1fr));
	grid-auto-rows: minmax(100px, auto);
	gap: 10px;
}

/* Screen larger than 900px? 3 columns */
@media screen and (max-width: 900px) {
	@viewport { width: 900px; } 
	.main-contener { grid-template-columns: repeat(3, 1fr); }
}

/* Screen larger than 600px? 2 column */
@media screen and (max-width: 600px) {
	@viewport { width: 600px; } 
	.main-contener { grid-template-columns: repeat(2, 1fr); }
}

/* Screen larger than 400px? 1 column*/
@media screen and (max-width: 320px){
	@viewport { width: 320px; } 
	.main-contener { grid-template-columns: 1fr; }
}

.card {
	position: relative;
	width: 100%;
}

.image {
	display: block;
	height: 100%;
	width: 100%;
	object-fit: cover;
}

.overlay {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	height: 100%;
	width: 100%;
	opacity: 0;
	transition: .5s ease;
	background-color: #008CBA;
}

.card:hover .overlay {
	opacity: 1;
}

.text {
	font-family: Helvetica;
	color: white;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	-ms-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	text-align: center;
}

.text h1{
	text-transform: uppercase;
	font-size: 2.5vmin;
}

.text p{	
	font-size: 2.2vmin;
}

.sign {
	font-style: italic;
	text-align: right;
}

.footer {
	grid-area: footer;
	display: grid;
	height:7%;
	line-height: 0.5;
	font-size: 2.2vmin;
	font-family: Helvetica;
	background-color: #008CBA;
	text-align: center;
	color : #fedd6a;
}